@using ToeicTest.Core.Dto
@model List<LessonDto>
@{
    ViewBag.Title = "Part 5: Incomplete Sentence";
}
<script>
    $("#menu_part5").addClass("active");
</script>

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <h5 class="page-title">
                Danh sách bộ câu hỏi
            </h5>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-table">
            <div class="card-body">
                <div class="table-responsive" style="color: #112e69; font-size: 14px; ">
                    <table class="table table-hover table-center mb-0 datatable">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:50px">#</th>
                                <th>Tên bộ câu hỏi</th>
                                <th class="text-center" style="width:150px">Số lượng câu</th>
                                <th class="text-center" style="width:100px">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td class="text-center">@(i+1)</td>
                                    <td>@Model[i].Name</td>
                                    <td class="text-center">@Model[i].TotalQuestions</td>
                                    <td class="text-center">
                                        <a href="/home/practicepart5?lessionId=@Model[i].Id" class="btn btn-primary btn-sm">Vào thi</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 